{
	"name": "language-server-ruby",
	"version": "0.27.0",
	"description": "Language server for Ruby",
	"repository": "https://github.com/rubyide/vscode-ruby",
	"author": "Stafford Brunk <stafford.brunk@gmail.com>",
	"license": "MIT",
	"private": false,
	"main": "dist/index.js",
	"dependencies": {
		"cross-spawn": "^6.0.5",
		"detect-newline": "^3.1.0",
		"diff-match-patch": "^1.0.4",
		"eol": "^0.9.1",
		"loglevel": "^1.6.7",
		"rxjs": "^6.4.0",
		"vscode-languageserver": "^5.2.1",
		"vscode-uri": "^2.1.1",
		"web-tree-sitter": "^0.15.8"
	},
	"devDependencies": {
		"@types/chai": "^4.2.5",
		"@types/cross-spawn": "^6.0.0",
		"@types/diff-match-patch": "^1.0.32",
		"@types/mocha": "^5.2.7",
		"@typescript-eslint/eslint-plugin": "^2.8.0",
		"@typescript-eslint/parser": "^2.8.0",
		"chai": "^4.2.0",
		"clean-webpack-plugin": "^3.0.0",
		"copy-webpack-plugin": "^5.0.5",
		"eslint": ">=6.6.0",
		"eslint-config-prettier": "^6.7.0",
		"eslint-config-standard": "^14.1.0",
		"eslint-config-standard-with-typescript": "^11.0.1",
		"eslint-plugin-import": "^2.18.2",
		"eslint-plugin-node": "^10.0.0",
		"eslint-plugin-promise": "^4.2.1",
		"eslint-plugin-standard": "^4.0.1",
		"exports-loader": "^0.7.0",
		"file-loader": "^4.2.0",
		"fork-ts-checker-webpack-plugin": "^3.1.0",
		"mocha": "^6.2.2",
		"nyc": "^14.1.1",
		"prettier": "^1.19.1",
		"source-map-support": "^0.5.16",
		"tree-sitter-cli": "^0.15.6",
		"tree-sitter-ruby": "^0.15.1",
		"ts-loader": "^6.2.1",
		"ts-node": "^8.5.2",
		"typescript": "^3.7.2",
		"webpack": "^4.41.2",
		"webpack-cli": "^3.3.10"
	},
	"scripts": {
		"build": "webpack -p",
		"build:wasm": "tree-sitter build-wasm ../../node_modules/tree-sitter-ruby && mv tree-sitter-ruby.wasm src/",
		"lint": "eslint src/**/*.ts",
		"prebuild": "yarn build:wasm",
		"test": "nyc mocha -r ts-node/register -r source-map-support/register spec/**/*.ts",
		"watch": "webpack -w --debug --output-pathinfo --mode development"
	},
	"nyc": {
		"cache": false,
		"extension": [
			".ts"
		],
		"exclude": [
			"**/*.d.ts",
			"coverage/**",
			"packages/*/test/**",
			"test/**",
			"test{,-*}.ts",
			"**/*{.,-}{test,spec}.ts",
			"**/node_modules/**",
			"webpack.config.ts"
		],
		"reporter": [
			"text",
			"lcov"
		],
		"all": true
	}
}
